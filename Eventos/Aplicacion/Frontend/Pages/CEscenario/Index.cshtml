@page
@model Frontend.Pages.CEscenario.IndexModel
@{
    ViewData["Title"]= "Index Escenario";
}


<h1>Listado de Escenarios</h1>
    <p>
        <a asp-page="Create" class="btn btn-success">Crear Escenarios</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Espectadores</th>
                <th>Tipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var esc in Model.Escenarios)
            {
                <tr>
                    <td>@esc.Nombre</td>
                    <td>@esc.Espectadores</td>
                    <td>@esc.Tipo</td>
                
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@esc.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-warning" asp-route-id="@esc.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@esc.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
