@page
@model Frontend.Pages.CEntrenador.IndexModel
@{
  ViewData["Title"]= "Index Entrenador";
}

<h1>Listado de Entrenadores</h1>
    <p>
        <a asp-page="Create" class="btn btn-success">Crear Entrenador</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Modalidad</th>
                <th>Equipo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ent in Model.EntrenadorView)
            {
                <tr>
                    <td>@ent.Nombres</td>
                    <td>@ent.Modalidad</td>
                    <td>@ent.Equipo</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@ent.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-warning" asp-route-id="@ent.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@ent.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>
