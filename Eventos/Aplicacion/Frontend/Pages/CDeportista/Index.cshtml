@page
@model Frontend.Pages.CDeportista.IndexModel
@{
    ViewData["Title"]= "Index Deportista";
}


<h1>Listado de Deportistas</h1>
    <p>
        <a asp-page="Create" class="btn btn-success">Crear Deportistas</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Documento</th>
                <th>Nombre</th>
                <th>Genero</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dep in Model.Deportistas)
            {
                <tr>
                    <td>@dep.Documento</td>
                    <td>@dep.Nombre</td>
                    <td>@dep.Genero</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@dep.id">Edit</a>
                        <a asp-page="./Details" class="btn btn-warning" asp-route-id="@dep.id">Details</a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@dep.id">Delete</a>
                        
                </tr>
            }
            
        </tbody>
    </table>

