@page
@model Frontend.Pages.CArbitro.EditModel
@{
ViewData["Title"]= "Modificar Arbitro";
}

<h2>Modificar Arbitro</h2>
<h3 class="text-danger">@ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Arbitro.Id" />

                <div class="form-group">
                    <label asp-for="Arbitro.Nombre" class="control-label"></label>
                    <input asp-for="Arbitro.Nombre" class="form-control"/>
                    <span asp-validation-for="Arbitro.Nombre" class="text-danger"></span>
                </div>

                 <div class="form-group">
                    <label asp-for="Arbitro.Documento" class="control-label"></label>
                    <input asp-for="Arbitro.Documento" class="form-control"/>
                    <span asp-validation-for="Arbitro.Documento" class="text-danger"></span>
                </div>

                 <div class="form-group">
                    <label asp-for="Arbitro.Apellidos" class="control-label"></label>
                    <input asp-for="Arbitro.Apellidos" class="form-control"/>
                    <span asp-validation-for="Arbitro.Apellidos" class="text-danger"></span>
                </div>

                 <div class="form-group">
                    <label asp-for="Arbitro.Modalidad" class="control-label"></label>
                    <input asp-for="Arbitro.Modalidad" class="form-control"/>
                    <span asp-validation-for="Arbitro.Modalidad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Arbitro.Rh" class="control-label"></label>
                    <input asp-for="Arbitro.Rh" class="form-control"/>
                    <span asp-validation-for="Arbitro.Rh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Arbitro.Celular" class="control-label"></label>
                    <input asp-for="Arbitro.Celular" class="form-control"/>
                    <span asp-validation-for="Arbitro.Celular" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Arbitro.ColegioId" class="control-label"></label>
                    <select asp-for="Arbitro.ColegioId" class="form-control">
                        <option value="">--Seleccione un Colegio--</option>
                        @foreach (var Col in Model.Colegios)
                        {
                            <option value="@Col.Id">@Col.RazonSocial</option>                            
                        }

                    </select>
                    <span asp-validation-for="Arbitro.ColegioId" class="text-danger"></span>
                </div>                

                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-success" />
                    <a asp-page="Index" class="btn btn-info">Cancelar</a>
                </div>
            </form>
        </div>
    </div>    
</div>
