@page
@model Frontend.Pages.CEquipo.DetailsModel
@{
 ViewData["Titulo"]= "Detalles de Equipo";

}

<h2>@ViewData["Titulo"]</h2>
<h3 class="text-danger">@ViewData["Error"]</h3>

<div class="form-horizontal">
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Equipo.Nombre" class="control-label"></label>
                    <input asp-for="Equipo.Nombre" class="form-control" readonly/>
                    <span asp-validation-for="Equipo.Nombre" class="text-danger"></span>
                </div>

                 <div class="form-group">
                    <label asp-for="Equipo.Modalidades" class="control-label"></label>
                    <input asp-for="Equipo.Modalidades" class="form-control" readonly/>
                    <span asp-validation-for="Equipo.Modalidades" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Equipo.Jugadores" class="control-label"></label>
                    <input asp-for="Equipo.Jugadores" class="form-control" readonly/>
                    <span asp-validation-for="Equipo.Jugadores" class="text-danger"></span>
                </div>


                <div class="form-group">
                    <label asp-for="Equipo.Nombre" class="control-label"></label>
                    <input asp-for="Equipo.Nombre" class="form-control" readonly />                       
                    <span asp-validation-for="Equipo.PatrocinadorId" class="text-danger"></span>
                </div>                

                <div class="form-group">
                    <a asp-page="Index" class="btn btn-info">Inicio</a>
                </div>
            </form>
        </div>
    </div>    
</div>
