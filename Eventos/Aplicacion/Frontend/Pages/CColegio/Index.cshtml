@page
@model Frontend.Pages.CColegio.IndexModel
@{
    ViewData["Title"]= "Index Colegio";

}


<h1  style="color:#212F3C;">Listado de Colegios</h1>
    <p>
        <a asp-page="Create" class="btn btn-success">Crear Colegio</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Nit</th>
                <th>RazonSocial</th>
                <th>Modalidad</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var col in Model.Colegios)
            {
                <tr>
                    <td>@col.Nit</td>
                    <td>@col.RazonSocial</td>
                    <td>@col.Modalidad</td>
                    <td>
                        <a asp-page="./Edit" class="btn btn-primary" asp-route-id="@col.Id">Edit</a>
                        <a asp-page="./Details" class="btn btn-warning" asp-route-id="@col.Id">Details</a>
                        <a asp-page="./Delete" class="btn btn-danger" asp-route-id="@col.Id">Delete</a>
                        
                </tr>
            }
            
        </tbody>
    </table>

