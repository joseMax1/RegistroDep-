@page
@model Frontend.Pages.CColegio.EditModel
@{

ViewData["Title"]="Editar Colegio";
}
<h2>Editar Colegio</h2>
<h3 class="text-danger">@ViewData["Error"]</h3>
<div class="form-horizontal">
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Colegio.Id" />

                <div class="form-group">
                    <label asp-for="Colegio.Nit" class="control-label"> </label>
                    <input asp-for="Colegio.Nit" class="form-control" readonly />
                    <span asp-validation-for="Colegio.Nit" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Colegio.RazonSocial" class="control-label"> </label>
                    <input asp-for="Colegio.RazonSocial" class="form-control" />
                    <span asp-validation-for="Colegio.RazonSocial" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Colegio.Direccion" class="control-label"> </label>
                    <input asp-for="Colegio.Direccion" class="form-control" />
                    <span asp-validation-for="Colegio.Direccion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Colegio.Telefono" class="control-label"> </label>
                    <input asp-for="Colegio.Telefono" class="form-control" />
                    <span asp-validation-for="Colegio.Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Colegio.Modalidad" class="control-label"> </label>
                    <input asp-for="Colegio.Modalidad" class="form-control" />
                    <span asp-validation-for="Colegio.Modalidad" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Colegio.Licencia" class="control-label"> </label>
                    <input asp-for="Colegio.Licencia" class="form-control" />
                    <span asp-validation-for="Colegio.Licencia" class="text-danger"></span>
                </div>

                
                <div class="form-group">
                    <input type="submit" value="Editar" class="btn btn-success"/>
                    <a asp-page="Index" class="btn btn-info">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
