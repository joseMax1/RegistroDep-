@page
@model Frontend.Pages.CTorneoEquipo.DeleteModel
@{
 ViewData["Title"]= "Eliminar Equipo-torneo";
}

<h2>Eliminar Equipo del Torneo</h2>
@if(ViewData["Error"]==null)
{
    <h3 class="text-danger"> Esta seguro de retirar el equipo del torneo?</h3>
}
else
{
    <h3 class="text-danger">@ViewData["Error"]</h3>
}


<div class="form-horizontal">
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form method="post">

                <input type="hidden" asp-for="TorneoEquipo.TorneoId" />
                <input type="hidden" asp-for="TorneoEquipo.EquipoId" />

                <div class="form-group">
                    <label asp-for="Torneo.Nombre" class="control-label"></label>
                    <input asp-for="Torneo.Nombre" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Equipo.Nombre" class="control-label"></label>
                    <input asp-for="Equipo.Nombre" class="form-control" readonly />
                </div>
                

                <div class="form-group">
                    <input type="submit" value="Eliminar" class="btn btn-danger"/>
                    <a asp-page="Index" class="btn btn-info">Cancelar</a>
                </div>

            </form>
        </div>
    </div>
</div>


